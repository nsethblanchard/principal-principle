


<h1>Principal Principle Admin Page</h1>
<h2> School: <%= @user.school %>


<h3>Administrator Name: <%=@user.username%></h3>
<h3>Administrator Email: <%=@user.email%></h3>
<p><%= @user.school %> currently has <%= @user.teachers.count %> teachers and <%= @user.students.count %> students.</p>

<%= flash[:message] if flash[:message] %>

<h5> Current Teachers</h5>

<table class="table table-striped table-hover">
  <thead class="table-dark" >
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.subject %></td>
        <td><%= link_to "#{teacher.first_name}'s Show Page", teacher_path(teacher), class:"btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: "Please confirm deletion of #{teacher.first_name}" }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h5>Current Students</h5>

<table class="table table-striped table-hover">
  <thead class="table-dark" >
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Grade Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.grade_level %></td>
        <td><%= link_to "#{student.first_name}'s Show Page", student_path(student), class:"btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: "Please confirm deletion of #{student.first_name}" }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>