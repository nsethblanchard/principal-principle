


<h1>Principal Principle Admin Page</h1>
<h2> School: <%= @user.school %>


<h3>Administrator Name: <%=@user.username%></h3>
<h3>Administrator Email: <%=@user.email%></h3>

<%= flash[:message] if flash[:message] %>

<h5>Current Teachers</h5>
<ol>
<% @user.teachers.each do |teacher| %>   
        <li><%= full_name teacher %> - Currently Teaches <%= teacher.subject %> <%= link_to "#{teacher.first_name}'s Show page", teacher_path(teacher)%>
            <%= link_to "Edit #{teacher.first_name}", edit_teacher_path(teacher)%>
            <%= link_to "Delete #{teacher.first_name}", teacher, method: :delete, data: { confirm: "Please confirm deletion of #{teacher.first_name}"} %></li>
        <%# link_to full_name(teacher), teacher_path %> 
    <% end %>
</ol>

<%= link_to "Create a new Teacher", new_teacher_path %>


<h5>Current Students</h5>
<ol>
<% @user.students.each do |student| %>
        <li><%= full_name student %> - Grade: <%= student.grade_level %> <%= link_to "#{student.first_name}'s Show page", student_path(student)%>
        <%= link_to "Edit #{student.first_name}", edit_student_path(student)%></li></li>
    <% end %>
</ol>

<%= link_to "Create a new Student", new_student_path %>
