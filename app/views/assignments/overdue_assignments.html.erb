
<h1> Overdue Assignments </h1>
<br>
<br>
<% if @assignments == [] %>
    <h6> There are currently no overdue assignments. </h6>
<% else %>
<table class="table table-striped table-hover">
  <thead class="table-dark" >
    <tr>
      <th>Assignment Title</th>
      <th>Assignment Content</th>
      <th>Student Name</th>
      <th>Teacher Name</th>
      <th>Assignment Due Date</th>
      <th>Days Overdue</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.content %></td>
        <td><%= full_name(assignment.student) %></td>
        <td><%= full_name(assignment.teacher) %></td>
        <td><%= assignment.due_date.strftime("%m/%d/%y") %></td>
        <td><strong><%= TimeDifference.between(Date.today, assignment.due_date).in_days.to_i %></strong></td>
        

        <td><%= link_to "Assignment Page", assignment_path(assignment), class:"btn btn-success btn-sm" %></td>
        <td><%= link_to "Student Page", student_path(assignment.student), class:"btn btn-success btn-sm" %></td>  
        <td><%= link_to "Teacher Page", teacher_path(assignment.teacher), class:"btn btn-success btn-sm" %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>












